<html lang="en">
  <%- include('./partials/head.ejs') %>

  <body>

    <%- include('./partials/nav.ejs') %>

    <div class="container main-container" style="padding-top: 80px;">

      <h1 class="mb-4">Create a New Course</h1>

      <!-- Course Creation Form -->
      <form action="/staff/courses/create" method="POST">
        <div class="mb-3">
          <label for="courseName" class="form-label">Course Name</label>
          <input type="text" class="form-control" id="courseName" name="courseName" required>
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
        </div>
        <div class="mb-3">
          <label for="subjectArea" class="form-label">Subject Area</label>
          <input type="text" class="form-control" id="subjectArea" name="subjectArea" required>
        </div>
        <div class="mb-3">
          <label for="credits" class="form-label">Credits</label>
          <input type="number" class="form-control" id="credits" name="credits" required>
        </div>
        <button type="submit" class="btn btn-primary">Create Course</button>
      </form>

    </div>

    <%- include('./partials/footer.ejs') %>

  </body>
</html>
